pkgname=mate-revenge-desktop
pkgver=1.00
pkgrel=1
pkgdesc="Desktop Meta-Package for Mate Revenge"
arch=('any')
license=('GPL')
makedepends=('git')
url=https://github.com/obrevenge/mate-revenge-desktop
depends=('python2' 'revenge-software-install-tool' 'revenge-tools' 'revenge-welcome' 'revenge-wallpapers')
source=("git+$url.git")
md5sums=('SKIP')
install=$pkgname.install
    
package() {
	install -d $pkgdir/etc
	cp -r $srcdir/mate-revenge-desktop/shared/skel_new $pkgdir/etc
}

